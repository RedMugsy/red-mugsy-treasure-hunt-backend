# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/treasure_hunt_db?schema=public"

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Email Configuration (using Gmail SMTP as example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME="Red Mugsy Treasure Hunt"

# Cloudflare Turnstile
# IMPORTANT: Turnstile keys are domain-specific!
# For Railway: Create new Turnstile site with your-app.railway.app domain
# For local development: Use localhost or 127.0.0.1
# For production: Use your actual domain (e.g., api.redmugsy.com)
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-for-your-domain
# Optional: Disable Turnstile validation (for testing/staging)
# DISABLE_TURNSTILE=true

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Admin Configuration
ADMIN_EMAIL=admin@redmugsy.com
ADMIN_PASSWORD=secure-admin-password-change-me

# Railway specific (automatically set by Railway)
# RAILWAY_STATIC_URL
# RAILWAY_PUBLIC_DOMAIN